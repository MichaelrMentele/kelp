%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      = link_to "Kelp", root_path, class: "navbar-brand"
      %ul.nav.navbar-nav
        %li= link_to "Businesses", businesses_path
        - unless current_user
          %li= link_to "Login", login_path
          %li= link_to "Register", register_path
        - if current_user
          %li= link_to "Add a Business", new_business_path
          - if current_user.vendor?
            %li= link_to "Add Your Business", new_vendor_business_path
          %li.dropdown
            %a(href="" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" aria-haspopup="true" aria-expanded="false")
              Welcome, #{current_user.username}
              %b.caret
            %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
              %li
                = link_to "Sign Out", logout_path, method: :post,  class: "dropdown-item"
              %li
                = link_to "Profile", user_path(current_user)
